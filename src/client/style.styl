@charset 'utf-8'

/*
	::selection
		background var(--primary)
		color #fff
*/

@font-face
    font-family Koruri
    src url('assets/fonts/Koruri-Regular-sub.eot')
    src url('assets/fonts/Koruri-Regular-sub.eot?#iefix') format('embedded-opentype'), url('assets/fonts/Koruri-Regular-sub.woff') format('woff'), url('assets/fonts/Koruri-Regular-sub.ttf') format('truetype')

*
	position relative
	box-sizing border-box
	background-clip padding-box !important
	tap-highlight-color transparent
	-webkit-tap-highlight-color transparent

html, body
	margin 0
	padding 0
	scroll-behavior smooth
	text-size-adjust 100%
	font-family Koruri, Roboto, HelveticaNeue, Arial, sans-serif

html.changing-theme
	&, *
		transition background 1s ease !important

a
	text-decoration none
	color var(--link)
	cursor pointer

	&:hover
		text-decoration underline

	*
		cursor pointer

@css {
	a {
		tap-highlight-color: var(--linkTapHighlight) !important;
		-webkit-tap-highlight-color: var(--linkTapHighlight) !important;
	}
}
